{
  "manifest_version": 3,
  "name": "Scientific Text Explainer",
  "version": "1.0",
  "description": "Right-click to simplify scientific text using an LLM.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
    
  }
}
  
